    }

    .action-buttons a {
      display: inline-block;
      margin: 10px;
      padding: 10px 20px;
      background-color: #ff5722;
      color: white;
      text-decoration: none;
      font-size: 1.2rem;
      border-radius: 5px;
      box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
      transition: background-color 0.3s ease;
